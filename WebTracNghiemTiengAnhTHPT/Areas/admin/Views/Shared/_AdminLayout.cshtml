
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AdminLayout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @{
        Html.RenderAction("RenderNavbar", "Home");
    }
    <!-- Sidebar -->
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar section -->
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color: #f8f9fa;">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-dark min-vh-100" style="background: #f1f3f5;">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-dark text-decoration-none" style="font-weight: bold;">
                        <span class="fs-5 d-none d-sm-inline">Admin Page</span>
                    </a>

                    <!-- Sidebar menu -->
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu" style="width: 100%; padding: 15px; background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
                        <li style="width: 100%;">
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle" style="color: #343a40; padding: 12px; display: flex; align-items: center; font-weight: bold; text-transform: uppercase;">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                <span class="ms-1 d-none d-sm-inline">Quản lý chung</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1 ml-4" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0" style="color: #495057; padding: 8px 0; text-transform: capitalize;">
                                        Quản lý tài khoản
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0" style="color: #495057; padding: 8px 0; text-transform: capitalize;">
                                        Quản lý lớp học
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0" style="color: #495057; padding: 8px 0; text-transform: capitalize;">
                                        Quản lý môn học
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li style="width: 100%; margin-top: 15px;">
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle" style="color: #343a40; padding: 12px; display: flex; align-items: center; font-weight: bold; text-transform: uppercase;">
                                <i class="fas fa-users me-2"></i>
                                <span class="ms-1 d-none d-sm-inline">Quản lý người dùng</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1 ml-4" id="submenu2" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="#" class="nav-link px-0" style="color: #495057; padding: 8px 0; text-transform: capitalize;">
                                        Quản lý Giáo Viên
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="nav-link px-0" style="color: #495057; padding: 8px 0; text-transform: capitalize;">
                                        Quản lý Học Sinh
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <hr>
                </div>
            </div>

            <!-- Main Content -->
            <div class="container py-4">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight: bold; font-size: 1.5rem;">Quản trị hệ thống</div>
                    <div class="panel-body" style="background-color: #ffffff; padding: 20px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
                        @RenderBody()
                    </div>
                    <div class="panel-footer text-center" style="background-color: #f8f9fa; padding: 10px; margin-top: 15px;">
                        <p style="color: #6c757d;">© 2024 9 19 Nguyễn Minh Nghi, Hồ Tuần Phước, Phan Phước Hồng Phúc.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Hide the success message after 2 seconds
        setTimeout(function () {
            var messageDiv = document.querySelector('.alert-success');
            if (messageDiv) {
                messageDiv.style.display = "none"; // Hide the message
            }
        }, 2000); // 2000 milliseconds = 2 seconds
    </script>
    <!-- Custom CSS -->
    <style>
        /* Styling the sidebar */
        .nav-link {
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background-color: #e9ecef;
                color: #343a40;
            }

        /* Smooth collapse/expand animations */
        #submenu1, #submenu2 {
            transition: height 0.3s ease;
        }

        .navbar-nav .nav-link {
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: #f1f3f5;
                border-radius: 5px;
            }

        .navbar-brand {
            font-size: 1.3rem;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #0056b3;
            }

        .navbar-toggler {
            border: none;
        }
    </style>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
