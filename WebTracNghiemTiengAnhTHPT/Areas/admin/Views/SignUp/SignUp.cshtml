@{
    Layout = "~/Views/Shared/LayoutWeb.cshtml";
}

<div class="signup-wrapper">
    <div class="signup-card">
        <h2 class="signup-title">Tạo Tài Khoản</h2>
        <form action="/admin/SignUp/SignUp" method="POST">
            <!-- Trường Họ Tên -->
            <div class="input-group">
                <input type="text" id="name" name="name" placeholder="Họ và tên" required>
                <label for="name">Họ và Tên</label>
            </div>
            <!-- Trường Email -->
            <div class="input-group">
                <input type="email" id="email" name="email" placeholder="Email" required>
                <label for="email">Email</label>
            </div>
            <!-- Trường Mật Khẩu -->
            <div class="input-group">
                <input type="password" id="password" name="password" placeholder="Mật khẩu" required>
                <label for="password">Mật khẩu</label>
            </div>
            <!-- Trường Nhập Lại Mật Khẩu -->
            <div class="input-group">
                <input type="password" id="confirm-password" name="repassword" placeholder="Xác nhận mật khẩu" required>
                <label for="confirm-password">Xác nhận mật khẩu</label>
            </div>
            <!-- Nút Đăng Ký -->
            @if (ViewBag.Message!=null)
            {
                <p class="text-bg-danger">  @ViewBag.Message</p>
            }
            <button type="submit" class="btn-submit">Đăng Ký</button>
        </form>
        <p class="login-prompt">Đã có tài khoản? <a href="/admin/Login/Login">Đăng nhập</a></p>
    </div>
</div>

<style>
/* Tổng thể */
.signup-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Roboto', sans-serif;
}

/* Thẻ card chứa form */
.signup-card {
    background: #fff;
    padding: 40px 30px;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    width: 100%;
    text-align: center;
}

/* Tiêu đề */
.signup-title {
    font-size: 26px;
    font-weight: bold;
    color: #333;
    margin-bottom: 25px;
    text-transform: uppercase;
}

/* Input group */
.input-group {
    position: relative;
    margin-bottom: 20px;
    width: 700px;
}

.input-group input {
    width: 100%;
    padding: 12px 10px;
    border: 1px solid #ddd;
    border-radius: 8px !important;
    font-size: 14px; 
    transition: border 0.3s, box-shadow 0.3s;
}

.input-group input:focus {
    border: 1px solid #0072ff;
    box-shadow: 0 0 8px rgba(0, 114, 255, 0.2);
    outline: none;
}

/* Label nổi */
.input-group label {
    position: absolute;
    left: 12px;
    top: 12px;
    font-size: 14px;
    color: #aaa;
    pointer-events: none;
    transition: 0.3s;
}

.input-group input:focus + label,
.input-group input:not(:placeholder-shown) + label {
    top: -10px;
    font-size: 12px;
    color: #0072ff;
    background: #fff;
    padding: 0 5px;
}

/* Nút đăng ký */
.btn-submit {
    background-color: #0072ff;
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    padding: 12px 20px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    width: 100%;
    transition: background-color 0.3s ease;
}

.btn-submit:hover {
    background-color: #0056b3;
}

/* Đăng nhập */
.login-prompt {
    margin-top: 15px;
    font-size: 14px;
    color: #555;
}

.login-prompt a {
    color: #0072ff;
    font-weight: bold;
    text-decoration: none;
    transition: 0.3s ease;
}

.login-prompt a:hover {
    color: #0056b3;
    text-decoration: underline;
}

/* Hiệu ứng khi responsive */
@@media (max-width: 480px) {
    .signup-card {
        padding: 30px 20px;
    }
    .signup-title {
        font-size: 20px;
    }
    .btn-submit {
        font-size: 14px;
    }
}
</style>

