@model WebTracNghiemTiengAnhTHPT.Models.PhongThiViewModel

@{
    ViewBag.Title = "Edit Phòng Thi";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Phòng Thi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <!-- Trường TenPhong -->
        <div class="form-group">
            Tên Phòng
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhongThi.TenPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhongThi.TenPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Trường MatKhau -->
        <div class="form-group">
            Mật Khẩu Phòng
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhongThi.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhongThi.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Dropdown MaLop (chọn lớp học) -->
        <div class="form-group">
            Lớp Học
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PhongThi.malop, new SelectList(Model.LopHocList, "Value", "Text", Model.PhongThi.malop), "--Chọn Lớp Học--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PhongThi.malop, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
