<!-- Include Chart.js library -->

<div>
    <canvas id="ketQuaChart" width="400" height="200"></canvas>
</div>

@section scripts {
    <script>
    $(document).ready(function () {
        // Fetch data via AJAX
        $.ajax({
            url: '@Url.Action("GetKetQuaData", "Contests")',
            method: 'GET',
            success: function (data) {
                const labels = data.map(item => item.ThoiGianBatDau);
                const scores = data.map(item => item.Diem);
                const examNames = data.map(item => item.TenKyThi);

                // Render the chart with the fetched data
                const ctx = document.getElementById('ketQuaChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Điểm',
                            data: scores,
                            fill: false,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            tension: 0.1
                        }]
                    },
                    options: {
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Thời gian'
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'Điểm'
                                },
                                beginAtZero: true
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    title: function(context) {
                                        return examNames[context[0].dataIndex] || '';
                                    }
                                }
                            }
                        }
                    }
                });
            },
            error: function (xhr, status, error) {
                console.error('Error fetching data:', error);
            }
        });
    });
    </script>
}
