    <div class="container">
        <div class="row footer-content">
            <section class="col-md-4 col-12" aria-labelledby="gettingStartedTitle">
                <h2>P2N</h2>
                <ul>
                    <li>@Html.ActionLink("Về Chúng Tôi", "About", "Home")</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                </ul>
            </section>
            <section class="col-md-4 col-12" aria-labelledby="resourcesTitle">
                <h2>Tài Nguyên</h2>
                <ul>
                    <li>@Html.ActionLink("Ôn tập", "Index", "OnTap")</li>
                    <li>@Html.ActionLink("Tham Gia Kỳ Thi", "Index", "Contests")</li>
