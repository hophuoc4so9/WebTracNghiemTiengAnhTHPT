<style>
    .footer {
        background-color: #2c3e50;
        color: #f8f9fa;
        padding: 40px 0;
        text-align: center;
    }

    /* Main container and content layout */
    .footer-content {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        padding-top: 20px;
    }

    .footer h2 {
        font-size: 20px;
        color: #ffde59;
        margin-bottom: 15px;
    }

    .footer ul {
        list-style-type: none;
        padding: 0;
    }

    /* Links */
    .footer ul li {
        margin-bottom: 10px;
    }

    .footer a {
        color: #ffde59;
        text-decoration: none;
        font-size: 16px;
    }

    .footer a:hover {
        color: #f8f9fa;
        text-decoration: underline;
    }

    /* Contact information styling */
    .contact-info li {
        display: flex;
        align-items: center;
        font-size: 16px;
        color: #f8f9fa;
        margin-left: 82px;
    }

    .contact-info i {
        margin-right: 8px;
        color: #ffde59;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .contact-info {
            padding: 0;
        }
    }
</style>
