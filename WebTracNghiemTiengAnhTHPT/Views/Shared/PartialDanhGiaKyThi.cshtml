@model IEnumerable<WebTracNghiemTiengAnhTHPT.Models.DanhGia>
@{
    <head>
        <!-- Other head content -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    </head>
}

<h1>Đánh giá</h1>
<div class="">
    <div class="card">
        @if (!Model.Any())
        {
            <h2>Chưa có Đánh giá nào</h2>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="card-body">
                    <div class="d-flex flex-start align-items-center">
                        <div>
                            <h6 class="fw-bold text-primary mb-1" style="font-size:20px">
                                @item.TaiKhoan.Username
                                <span class="text-muted small mb-0" style="font-size:18px"></span>
                            </h6>
                        </div>
                    </div>
                    <div class="rating mt-3 mb-4 pb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= item.Rate)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                            else
                            {
                                <i class="far fa-star text-warning"></i>
                            }
                        }
                    </div>
                    <p class="mt-3 mb-4 pb-2">
                        @item.NoiDung
                    </p>
                </div>
            }
        }
    </div>
</div>

