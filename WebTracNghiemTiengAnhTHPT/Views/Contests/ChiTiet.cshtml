        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Header */
    .test-header {
        font-size: 1.5rem;
        font-weight: bold;
        text-align: left;
        margin-bottom: 20px;
        color: #333;
    }

    /* Bố cục 2 cột */
    .test-layout {
        display: flex;
        gap: 16px;
    }

    /* Phần hình ảnh */
    .test-image-section {
        flex: 1;
    }

    .test-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
    }

    /* Phần thông tin */
    .test-info-section {
        flex: 2;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .test-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 12px;
    }

    .test-meta {
        font-size: 0.9rem;
        color: #555;
    }

        .test-meta img {
            width: 16px;
            height: 16px;
            vertical-align: middle;
            margin-right: 8px;
        }

        .test-meta p {
            margin: 4px 0;
        }

    /* Nút hành động */
    .test-actions {
        margin-top: 20px;
    }

        .test-actions .btn {
            font-size: 1rem;
            padding: 10px 20px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            display: inline-block;
        }

            .test-actions .btn:hover {
                background-color: #218838;
            }

/* Danh sách đánh giá */
#ratings-list {
    margin: 20px 0;
    padding: 0;
}

#ratings-list li {
    background: #f0f0f0;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 10px;
    list-style: none;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

#ratings-list .star-rating {
    color: #f39c12;
    font-size: 16px;
}

.star {
    cursor: pointer;
    font-size: 18px;
    color: #ccc;
    transition: color 0.3s;
}

.star.filled {
    color: #f39c12;
}

.rating-form {
    background: #ffffff;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    margin-top: 20px;
}

.rating-form label {
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
    display: block;
}

.rating-form textarea {
    resize: none;
    border-radius: 5px;
}

/* Lịch sử làm bài */
#partiview {
    background: #ffffff;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
