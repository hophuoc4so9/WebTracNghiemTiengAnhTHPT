        }

        .practice-options h4 {
            font-size: 1.4em;
            font-weight: bold;
            color: #333;
            margin-top: 20px;
        }

        .option-list {
            margin-top: 10px;
        }

            .option-list div {
                padding: 10px;
                border: 1px solid #ddd;
                margin-bottom: 5px;
                border-radius: 4px;
                background-color: #f9f9f9;
                transition: background-color 0.3s ease, transform 0.3s ease;
                cursor: pointer;
            }

                .option-list div:hover {
                    background-color: #e0f7fa;
                    transform: scale(1.02);
                }

        #partiview {
            margin-top: 20px;
        }

        #partialDangBaiContainer {
            margin-top: 20px;
        }
    </style>
    <script>
    $(document).ready(function () {
        $("#ratingForm").submit(function (e) {
            e.preventDefault();

            var rate = $("#rate").val();
            var comment = $("#comment").val();
            var made = @made;

            $.ajax({
                url: '@Url.Action("DanhGia", "Contests")',
                type: 'POST',
                data: {
                    made: made,
                    rate: rate,
                    comment: comment
                },
                success: function (response) {
                    alert("Đánh giá thành công!");
                    location.reload(); // Reload the page to update the list of ratings
                },
                error: function (error) {
                    alert("Đã xảy ra lỗi, vui lòng thử lại.");
                }
            });
        });
    });
    </script>
